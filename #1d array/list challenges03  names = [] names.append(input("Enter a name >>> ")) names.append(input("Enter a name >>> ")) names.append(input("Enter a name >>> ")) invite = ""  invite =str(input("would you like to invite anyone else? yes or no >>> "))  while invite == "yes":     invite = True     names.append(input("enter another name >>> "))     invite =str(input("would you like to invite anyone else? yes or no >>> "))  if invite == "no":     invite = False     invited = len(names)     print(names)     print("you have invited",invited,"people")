#1d array/list challenges03

names = []
names.append(input("Enter a name >>> "))
names.append(input("Enter a name >>> "))
names.append(input("Enter a name >>> "))
invite = ""

invite =str(input("would you like to invite anyone else? yes or no >>> "))

while invite == "yes":
    invite = True
    names.append(input("enter another name >>> "))
    invite =str(input("would you like to invite anyone else? yes or no >>> "))

if invite == "no":
    invite = False
    invited = len(names)
    print(names)
    print("you have invited",invited,"people")
    


